#!/usr/bin/perl

$ENV{TZ} = "Europe/Helsinki";

$program = (-x "../qdcrop" ? "../qdcrop" : "qdcrop");

system('grep --quiet "#define WGS84 1" /usr/include/smartmet/newbase/NFmiGlobals.h');
$wgs84 = 1-($? >> 8);

sub FindFile($$)
{
    my $dir = shift;
    my $name = shift;
    my $result;
    if (-e "$dir/$name.xz") {
        $result="$name.xz";
    } elsif (-e "$dir/$name.bz2") {
        $result="$name.bz2"
    } elsif (-e "$dir/$name.gz") {
        $result="$name.gz"
    } elsif (-e "$dir/$name.zstd") {
        $result="$name.zstd"
    } elsif (-e "$dir/$name") {
        $result=$name;
    }
    return $result;
}

sub CatCmd($)
{
    my $name = shift;
    my $result;
    if ($name =~ m/\.xz$/) {
        $result = "xzcat";
    } elsif ($name =~ m/\.bz2$/) {
        $result="bz2cat";
    } elsif ($name =~ m/\.gz$/) {
        $result="zcat.gz";
    } elsif ($name =~ m/\.zstd/) {
        $result="zstdcat";
    } else {
        $result="cat";
    }
    return $result;
}

$results = "results";
$data = "data/" . FindFile("data", "griddata.sqd");
$pointdata = "data/" . FindFile("data", "pointdata.sqd");

$errors = 0;

