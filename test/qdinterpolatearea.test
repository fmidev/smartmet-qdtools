#!/usr/bin/perl

$program = (-x "../qdinterpolatearea" ? "../qdinterpolatearea" : "qdinterpolatearea");

use IO::Handle;
autoflush STDOUT 1;


# qdinterpolatearea
# This is the old scandinavia -> kepa transformation

DoSqdTest("qdinterpolatearea pal",
	  "$program conf/qdinterpolatearea.txt < data/pal.sqd > results/qdinterpolatearea_pal.sqd.tmp",
	  "qdinterpolatearea_pal.sqd");

DoSqdTest("qdinterpolatearea pal_xh",
	  "$program conf/qdinterpolatearea.txt < data/pal_xh.sqd > results/qdinterpolatearea_palxh.sqd.tmp",
	  "qdinterpolatearea_palxh.sqd");

DoSqdTest("qdinterpolatearea proj option",
	  "$program -p stereographic,20,90,60:6,51.3,49,70.2 -s 63x70 -i data/pal_xh.sqd -o results/qdinterpolatearea_proj.sqd.tmp",
	  "qdinterpolatearea_proj.sqd");

DoSqdTest("qdinterpolatearea resolution option",
	  "$program -p stereographic,20,90,60:6,51.3,49,70.2 -s 50x50km -i data/pal_xh.sqd -o results/qdinterpolatearea_resolution.sqd.tmp",
	  "qdinterpolatearea_resolution.sqd");

# ----------------------------------------------------------------------
# Run a single test
# ----------------------------------------------------------------------

sub DoTest
{
    my($title,$command,$dataname) = @_;

    my($resultfile) = "results/$dataname";
    my($tmpfile) = "$resultfile.tmp";

    print padname($title);
    system("$command");

    if(equalcontent($resultfile,$tmpfile))
    {
	print " OK\n";
	unlink($tmpfile);
    }
    else
    {
	print " FAILED!\n";
	print "( $resultfile <> $tmpfile)\n";
    }
}

# ----------------------------------------------------------------------
# Run a single test, allowing for a small difference in sqd results
# ----------------------------------------------------------------------

sub DoSqdTest
{
    my($title,$command,$dataname) = @_;

    # Halutut tulokset ovat t‰‰ll‰

    my($resultfile) = "results/$dataname";

    # Saadut tulokset
    my($tmpfile) = "$resultfile.tmp";

    # Aja k‰sky
    
    print padname($title);
    system("$command");

    # Vertaa tuloksia

    my($difference) = `../qddifference $resultfile $tmpfile`;
    $difference =~ s/^\s+//;
    $difference =~ s/\s+$//;

    if($difference < 0.00001)
    {
	print " OK (diff <= $difference)\n";
	unlink($tmpfile);
    }
    else
    {
	print " FAILED! (maxdiff = $difference)\n";
	print "( $resultfile <> $tmpfile)\n";
    }
}

# ----------------------------------------------------------------------
# Pad the given string to 70 characters with dots
# ----------------------------------------------------------------------

sub padname
{
    my($str) = @_[0];

    while(length($str) < 70)
    {
	$str .= ".";
    }
    return $str;
}

# ----------------------------------------------------------------------
# Compare two files
# ----------------------------------------------------------------------

sub equalcontent
{
    my($file1,$file2) = @_;

    # Files must exits

    if(!(-e $file1))
    { return 0; }
    if(!(-e $file2))
    { return 0; }

    # Read binary files and compare results

    open(FILE1,$file1);
    binmode(FILE1);
    read(FILE1,$buffer1,(stat(FILE1))[7]);
    close(FILE1);

    open(FILE2,$file2);
    binmode(FILE2);
    read(FILE2,$buffer2,(stat(FILE2))[7]);
    close(FILE2);

    return ($buffer1 eq $buffer2);
}

